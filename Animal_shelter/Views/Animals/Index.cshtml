@{
  Layout = "_Layout";
}

@using Animal_shelter.Models;
@model List<Animal_shelter.Models.Animal>;

<section class="py-1 text-center container">
  <div class="row py-lg-1">
    <div class="col-lg-6 col-md-8 mx-auto">
      <h1 class="fw-light">Animals</h1>
      <p>@Html.ActionLink("Add new animal", "Create")</p>

    </div>
  </div>
</section>
<div class="album py-5 bg-light">
  <div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      @foreach (Animal animal in Model)
      {
        <div class="col">
          <div class="card shadow-sm">
            <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg"
            role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false">
              <title>@Html.ValueFor(animalItem => animal.Name)</title>
              <rect width="100%" height="100%" fill="#55595c"></rect><text x="50%" y="50%" fill="#eceeef"
              dy=".3em">Thumbnail</text>
            </svg>

            <div class="card-body">
              <p class="card-text">@Html.ValueFor(animalItem => animal.Name), @Html.ValueFor(animalItem => animal.Type),
                @Html.ValueFor(animalItem => animal.Breed)</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <button type="button" class="btn btn-sm btn-outline-secondary">@Html.ActionLink("Edit",
                  "Details", new { id = animal.AnimalId })</button>
                </div>
                <small class="text-muted">@Html.ValueFor(animalItem => animal.Date)</small>
              </div>
            </div>
          </div>
        </div>
      }
    </div>
  </div>
</div>